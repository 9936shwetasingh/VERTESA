# ---------- Build Stage ----------
FROM node:20-alpine AS build

# App ka kaam ka directory
WORKDIR /app

# Package files copy karo aur dependencies install karo
COPY package.json package-lock.json ./
RUN npm install

# Baaki saare source code copy karo aur build run karo
COPY . .
RUN npm run build

# ---------- Production Stage ----------
FROM nginx:alpine

# Build output ko Nginx ke HTML folder me copy karo
COPY --from=build /app/build /usr/share/nginx/html

# Port expose karo
EXPOSE 80

# Nginx ko foreground me run karo
CMD ["nginx", "-g", "daemon off;"]